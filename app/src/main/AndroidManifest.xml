<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.litchiny.dailylife">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".LitchinyApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.litchiny.dailylife.activity.Main2Activity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.litchiny.dailylife.activity.ItemListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.litchiny.dailylife.activity.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.litchiny.dailylife.activity.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.litchiny.dailylife.activity.ItemListActivity" />
        </activity>
        <activity android:name="com.litchiny.dailylife.activity.DragFlowLayoutActivity" />
        <activity android:name="com.litchiny.dailylife.activity.CalculateActivity"/>
    </application>

</manifest>