<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dimen_size_35"
        android:layout_marginStart="@dimen/dimen_size_35"
        android:background="@drawable/dialog_google_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:textSize="@dimen/text_size_dialog2"
            android:text="ceshi"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_size_20"
            android:layout_marginEnd="@dimen/dimen_size_20"
            android:layout_marginStart="@dimen/dimen_size_20"
            android:layout_marginTop="@dimen/dimen_size_25"
            android:textColor="@color/colorTextSelect"
            />


        <EditText
            android:id="@+id/et_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_size_20"
            android:layout_marginEnd="@dimen/dimen_size_20"
            android:layout_marginStart="@dimen/dimen_size_20"
            android:layout_marginTop="@dimen/dimen_size_25"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:textSize="@dimen/text_size_dialog2"
            android:hint="@string/pls_category_name"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider_line_width_px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:background="@color/colorTextCustomDeep" />

        <LinearLayout
            android:id="@+id/ll_show_choice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/bt_dialog_negative_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_button_selector_left"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/colorTextSelect" />

            <View
                android:layout_width="@dimen/dimen_divider_line_width_px"
                android:layout_height="match_parent"
                android:background="@color/colorTextCustomDeep" />

            <TextView
                android:id="@+id/bt_dialog_positive_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_button_selector_right"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/colorTextSelect" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>

